{
  "manifest_version": 3,
  "name": "Chrome Remote Controller",
  "version": "1.0",
  "permissions": ["scripting", "tabs"],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://*/*",  
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "ext.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "128": "icon.png" 
  }
}
